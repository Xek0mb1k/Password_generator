<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordGenerator" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="android:colorForeground">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/light_theme_background</item>
        <item name="colorOnPrimary">@color/light_theme_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/light_theme_card_view_back</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/light_theme_background</item>
        <!-- Customize your theme here. -->
        <item name="rippleColor">#43FFFFFF</item>
        <item name="android:textColor">@color/light_theme_text_color</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/light_theme_background</item>
    </style>
</resources>