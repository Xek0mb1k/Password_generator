<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordGenerator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_background</item>
        <item name="colorPrimaryVariant">@color/dark_theme_background</item>
        <item name="colorOnPrimary">@color/dark_theme_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/dark_theme_card_view_back</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_theme_background</item>
        <item name="android:navigationBarColor">@color/dark_theme_background</item>
        <!-- Customize your theme here. -->
        <item name="rippleColor">#43000000</item>
        <item name="android:textColor">@color/white</item>


        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/dark_theme_background</item>
    </style>
</resources>